RewriteEngine On
Options -Indexes

#CLIENT ROUTERS FRONTEND
RewriteRule ^$ /app/views/public/home.php [L]
RewriteRule ^product$ /app/views/public/product.php [L]
RewriteRule ^contact$ /app/views/public/contact.php [L]

#USER ROUTERS FRONTEND

#ADMIN ROUTERS FRONTEND
RewriteRule ^admin/home$ /app/views/admin/home.php [L]

#CLIENT ROUTERS BACKEND
php_value auto_prepend_file "/web/BKSTORE/session_init.php"
RewriteRule ^auth/register$ /app/controllers/auth/signup.php [L]
RewriteRule ^auth/login$ /app/controllers/auth/login.php [L]
RewriteRule ^auth/forgot$ /app/controllers/auth/forgot.php [L]
RewriteRule ^auth/change$ /app/controllers/auth/change.php [L]
RewriteRule ^auth/logout$ /app/controllers/auth/logout.php [L]
RewriteRule ^test$ /app/models/test.php [L]
RewriteRule ^system/inforList$ /app/controllers/system/inforList.php [L]
RewriteRule ^product/productType$ /app/controllers/product/productType.php [L]

#USER ROUTERS BACKEND
RewriteRule ^user/info$ /app/controllers/user/info.php [L]
RewriteRule ^user$ /app/controllers/user/home.php [L]
RewriteRule ^user/avatar$ /app/controllers/user/avatar.php [L]
#CART ROUTERS BACKEND
RewriteCond %{REQUEST_METHOD} GET
RewriteRule ^user/cart$ /app/controllers/cart/get.php [L]
RewriteCond %{REQUEST_METHOD} POST
RewriteRule ^user/cart$ /app/controllers/cart/set.php [L]
#ORDER ROUTERS BACKEND
RewriteRule ^order/sale$ /app/controllers/order/sale.php [L]
#ADMIN ROUTERS BACKEND

#PRODUCT ROUTERS BACKEND
RewriteRule ^product/info$ /app/controllers/product/info.php [L]

#CUSTOM 404 ERROR PAGE
ErrorDocument 404 /app/views/public/404.php

# Ensure directories without index.php return a 404 error
RewriteCond %{REQUEST_FILENAME} -d
RewriteCond %{REQUEST_FILENAME}/index.php !-f
RewriteRule ^.*$ /app/views/public/404.php [L]